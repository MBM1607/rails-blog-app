<h1>Articles</h1>

<ul class="article-list">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <a href="<%=article_path(article)%>">
        <li class="article-link">
          <%=article.title%>
        </li>
      </a>
    <% end %>
  <% end %>
</ul>

<em>
  Our blog has <%= Article.public_count %> articles and counting!
</em>
