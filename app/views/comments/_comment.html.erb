<div class="comment-container">
	<strong class="commenter"><%= comment.commenter %>:</strong>
	<p class="comment">
		<%= comment.body %>
	</p>

	<div class="comment-button">
		<%= link_to 'Destroy Comment', [comment.article, comment], method: :delete, data: { confirm: "Are you sure?" } %>
	</div>
</div>